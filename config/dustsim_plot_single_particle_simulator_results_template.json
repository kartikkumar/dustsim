{
    // Directory containing trajectory data.
    "input_directory"           : "",

    // Input data files (generated by dustsim).
    "metadata_file"             : "metadata.csv",
    "state_history_file"        : "state_history.csv",

    // Directory where 2D figure is stored.
    "output_directory"          : "",

    // Filename for 2D figure.
    "2D_figure"                 : "trajectory_2d_views.png",

    // Filename for Kepler time-history figure.
    "kepler_figure"             : "kepler_time_history.png",

    // Flag that sets whether interactive 3D figure should be shown (a Python plotting window pops
    // up).
    "show_3D_figure"            : false,

    // Set radius of central body for 3D plot [km].
    "central_body_radius"       : 25559.0,

    // Characteristics for figures.
    "figure_dpi"                : 300
}
